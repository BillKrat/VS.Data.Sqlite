<?xml version="1.0" encoding="utf-8" ?>
<DataViewSupport xmlns="http://schemas.microsoft.com/VisualStudio/2007/07/Data/DataViewSupport">
  <Views>
    <View name="SQLite">
      <ConnectionNode>
        <InitialDisplayName>{Root.DatabaseName}</InitialDisplayName>
        <Children>
          <StaticNode>
            <DisplayName resource="Tables" />
            <Children>
              <Selection type="Table" ordering="Name">
                <SelectionNode nodeId="table">
                  <Icon name="Table" />
                  <!-- TODO: Command to show Sql? -->
                  <Properties>
                    <Property name="Name" />
                    <Property name="Type" />
                    <Property name="NColumns" />
                    <Property name="WithoutRowid" />
                    <Property name="Strict" />
                  </Properties>
                  <Commands>
                    <!-- Retrieve Data -->
                    <Command guid="501822E1-B5AF-11d0-B4DC-00A0C91506EF" cmdid="0x3060" provider="884DD964-5327-461f-9F06-6484DD540F8F" />
                  </Commands>
                  <Children>
                    <StaticNode>
                      <DisplayName resource="Columns" />
                      <Children>
                        <Selection type="TableColumn" restrictions="{table.Name}" ordering="CID">
                          <SelectionNode>
                            <!-- TODO: UniqueKey and ForeignKey? -->
                            <Icon name="PrimaryKey" when="{PrimaryKey} &lt;> 0" />
                            <Icon name="ComputedColumn" when="{Hidden} IN (2, 3)" />
                            <Icon name="Column" />
                            <Properties>
                              <Property name="Table" />
                              <Property name="CID" />
                              <Property name="Name" />
                              <Property name="Type" />
                              <Property name="NotNull" />
                              <Property name="DefaultValue" />
                              <Property name="PrimaryKey" />
                              <Property name="Hidden" />
                              <Property name="Collate" />
                              <Property name="AutoIncrement" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <StaticNode>
                      <DisplayName resource="Indexes" />
                      <Children>
                        <Selection type="TableIndex" restrictions="{table.Name}" ordering="Name">
                          <SelectionNode nodeId="index">
                            <Icon name="PrimaryKey" when="{Origin} = 'pk'" />
                            <!-- TODO: Should uinque, non-partial indexes get this icon? -->
                            <Icon name="UniqueKey" when="{Origin} = 'u'" />
                            <Icon name="Index" />
                            <!-- TODO: Command to show Sql? -->
                            <Properties>
                              <Property name="Table" />
                              <Property name="Name" />
                              <Property name="Unique" />
                              <Property name="Origin" />
                              <Property name="Partial" />
                            </Properties>
                            <!-- TODO: Denormalize to optimize for single-column indexes? -->
                            <Children>
                              <Selection type="TableIndexColumn" restrictions="{index.Table},{index.Name}" ordering="SeqNo">
                                <SelectionNode>
                                  <Icon name="Column" />
                                  <Properties>
                                    <Property name="Table" />
                                    <Property name="Index" />
                                    <Property name="SeqNo" />
                                    <Property name="CID" />
                                    <Property name="Name" />
                                    <Property name="Descending" />
                                    <Property name="Collate" />
                                    <Property name="Key" />
                                  </Properties>
                                </SelectionNode>
                              </Selection>
                            </Children>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <StaticNode>
                      <DisplayName resource="Triggers" />
                      <Children>
                        <Selection type="TableTrigger" restrictions="{table.Name}" ordering="Name">
                          <SelectionNode>
                            <Icon name="Trigger" />
                            <Properties>
                              <Property name="Table" />
                              <Property name="Name" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <!-- TODO: Foreign Keys -->
                  </Children>
                </SelectionNode>
              </Selection>
            </Children>
          </StaticNode>
          <StaticNode>
            <DisplayName resource="Views" />
            <Children>
              <Selection type="View" ordering="Name">
                <SelectionNode nodeId="view">
                  <Icon name="View" />
                  <Properties>
                    <Property name="Name" />
                    <Property name="NColumns" />
                  </Properties>
                  <Commands>
                    <!-- Retrieve Data -->
                    <Command guid="501822E1-B5AF-11d0-B4DC-00A0C91506EF" cmdid="0x3060" provider="884DD964-5327-461f-9F06-6484DD540F8F" />
                  </Commands>
                  <Children>
                    <StaticNode>
                      <DisplayName resource="Columns" />
                      <Children>
                        <Selection type="ViewColumn" restrictions="{view.Name}" ordering="CID">
                          <SelectionNode>
                            <Icon name="Column" />
                            <Properties>
                              <Property name="View" />
                              <Property name="CID" />
                              <Property name="Name" />
                              <Property name="Type" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <StaticNode>
                      <DisplayName resource="Triggers" />
                      <Children>
                        <Selection type="ViewTrigger" restrictions="{view.Name}" ordering="Name">
                          <SelectionNode>
                            <Icon name="Trigger" />
                            <Properties>
                              <Property name="View" />
                              <Property name="Name" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                  </Children>
                </SelectionNode>
              </Selection>
            </Children>
          </StaticNode>
        </Children>
      </ConnectionNode>
    </View>
  </Views>
  <Resources baseName="Microsoft.VisualStudio.Data.Sqlite.Properties.Resources" />
</DataViewSupport>